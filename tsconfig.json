{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}